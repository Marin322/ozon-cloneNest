datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // ← это ОБЯЗАТЕЛЬНО для Prisma 6
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  avatar String?
  phoneNumber String @unique
  cart      Cart?    @relation
  cartId    Int?     @unique
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model Cart {
  id        Int         @id @default(autoincrement())
  user      User        @relation(fields: [userId], references: [id])
  userId    Int         @unique
  items     CartItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime?   @updatedAt
}

model CartItem {
  id        Int     @id @default(autoincrement())
  quantity  Int     @default(1)
  cart      Cart    @relation(fields: [cartId], references: [id])
  cartId    Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  @@unique([cartId, productId])
}

model Product {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  image       String?
  price       Float?
  cartItems   CartItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime?   @updatedAt
}